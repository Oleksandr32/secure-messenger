<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/colorText</item>
        <item name="colorControlNormal">@color/colorTextInverted</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Inverted" parent="AppTheme">
        <item name="android:textColor">@color/colorTextInverted</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Inverted.NoActionBar" parent="AppTheme.Inverted">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Inverted.ActionBar" parent="AppTheme.Inverted">
        <item name="colorControlNormal">@color/colorTextInverted</item>
    </style>

    <style name="AppTheme.NoActionBar.Fullscreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Inverted.NoActionBar.Fullscreen" parent="AppTheme.Inverted.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppTheme.RoundButton" parent="AppTheme.Inverted">
        <item name="android:background">@drawable/background_button_round</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">@drawable/selectable_round</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:stateListAnimator">@animator/selector_raise</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
